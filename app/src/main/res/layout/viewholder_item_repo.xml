<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.searchrepos.SearchReposFragment">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="itemRepo"
            type="com.lebedevsd.githubviewer.ui.searchrepos.ItemRepo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/repo_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{clickListener}">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="88dp"
            android:layout_height="88dp"
            app:image_url="@{itemRepo.ownerAvatar}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{itemRepo.full_name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Commit message" />

        <TextView
            android:id="@+id/fork_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{itemRepo.forks_count}"
            app:layout_constraintBottom_toTopOf="@+id/repo_owner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repo_name"
            tools:text="Date and time" />

        <TextView
            android:id="@+id/repo_owner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{itemRepo.ownerUsername}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Author" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>